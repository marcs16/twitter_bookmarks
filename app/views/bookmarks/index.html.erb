<div class="navbar">
  <!-- create the navbar with the link to log out -->
  <% if user_signed_in?%>
    <%= current_user.email%>
    <%= button_to("Log out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }) %>
  <% else %>
    <%= link_to "Log in", new_user_session_path %>
  <% end %>
</div>
<h1 class="text-lg font-bold pt-8">BookMarks</h1>


<% @folders.each do |id, name|%>
  <a class="underline inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-gray-500 mr-2 hover:bg-gray-700 text-white"
   href="/bookmarks?folder=<%=id%>"><%= name%></a>
<%end%>
<% @bookmarks.each do |bookmark| %>
  <% author = @authors[bookmark[:author_id]] %>
  <div class="flex">
    <div class="mr-4 flex-shrink-0">
      <img class="h-10 w-10 rounded-full" src="<%=author[:profile_image_url]%>" alt="Photo of  <%= author[:name]%>."/>
    </div>
    <div>
        <h4 class="text-lg font-bold"><%= author[:name]%></h4>
        <span class="">
          <a class="underline" href="https://twitter.com/<%=author[:username]%>" target="_blank" ></a>
            @<%= author[:username]%>
          </a>
          </span>
        <p class="mt-1"><%= bookmark[:text]%></p>
        <span class="text-sm text-gray-500"> <%= time_ago_in_words(bookmark[:created_at])%> ago.</span>
    </div>
  </div>
  <br>
  <br>
  <br>
<% end %>